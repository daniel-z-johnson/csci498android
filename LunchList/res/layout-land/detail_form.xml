<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="2"
        android:stretchColumns="2" >

        <TableRow>

            <TextView android:text="@string/name_string" />

            <EditText android:id="@+id/name" 
                android:layout_span="2" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/address_string" />

            <EditText android:id="@+id/addr" 
                android:layout_span="2"/>
        </TableRow>

        <TableRow>

            <TextView android:text="@string/type_string" />

            <RadioGroup android:id="@+id/types" >

                <RadioButton
                    android:id="@+id/take_out"
                    android:text="@string/take_out_string" 
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/sit_down"
                    android:text="@string/sit_down_string" />

                <RadioButton
                    android:id="@+id/delivery"
                    android:text="@string/delivery_string" />
            </RadioGroup>

            <LinearLayout android:orientation="vertical" >

                <EditText
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/string_notes"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:maxLines="2"
                    android:scrollHorizontally="false" />

                <EditText
                    android:id="@+id/feed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/url_string" />

                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView 
                        android:text="@string/location_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView 
                        android:id="@+id/location"
                        android:text="@string/notset_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</ScrollView>